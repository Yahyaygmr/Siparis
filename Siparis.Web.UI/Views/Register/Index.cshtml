@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asyağmur Sipariş Takip</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container my-5">
        <div class="text-center">
            <h2>Asyağmur Sipariş Takip</h2>
            <h3>Personel Kayıt</h3>
        </div>

        <hr />
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 bg-light p-4">
                <form method="post">
                    <div class="form-group my-3">
                        <label for="exampleInputEmail1" class="my-2">Email</label>
                        <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp">
                        <span class="text-danger" asp-validation-for="Email"></span>
                       
                    </div>
                    <div class="form-group my-3">
                        <label  class="my-2">Kullancı Adı</label>
                        <input type="text" class="form-control" asp-for="UserName" >
                        <span class="text-danger" asp-validation-for="UserName"></span>

                    </div>
                    <div class="form-group my-3">
                        <label for="exampleInputPassword1" class="my-2">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group my-3">
                        <label for="exampleInputPassword1" class="my-2">Şifre Tekrar</label>
                        <input type="password" class="form-control" asp-for="PasswordCompare">
                        <span class="text-danger" asp-validation-for="PasswordCompare"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>
</html>
